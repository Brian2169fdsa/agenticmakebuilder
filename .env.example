# ManageAI Agentic Builder v3.0.0 — Environment Variables
# Copy to .env and fill in your values

# Required
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Anthropic (persona test endpoint)
ANTHROPIC_API_KEY=

# Make.com Live Deployment (optional — simulation mode when absent)
MAKECOM_API_KEY=
MAKECOM_TEAM_ID=
MAKECOM_ORG_ID=
MAKECOM_API_BASE=https://us1.make.com/api/v2
MAKECOM_WEBHOOK_SECRET=

# Supabase Sync Layer (optional)
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# Notifications (optional)
SLACK_WEBHOOK_URL=

# Authentication (disabled by default)
AUTH_ENABLED=false
MASTER_API_KEY=

# SOW / Cost defaults
MANAGEAI_HOURLY_RATE=150
MONITOR_INTERVAL=900
MONITOR_LOOKBACK=20

# Server
PORT=8000
